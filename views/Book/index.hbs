<div class="container mt-3">
    <a href="book/create" class="btn btn-primary">Crear Libro</a>
     {{#if books}}
     <div class="row">
     {{#each books}}
     <div class="card" style="width: 18rem;min-width: 200px;margin: 10px 10px;">
            <img src="{{this.picture}}" class="card-img-top" width="300px" height="300px" alt="Portada del libro">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text"><strong>Autor:</strong> {{this.AuthorName}}</p>
                <p class="card-text"><strong>Año de Publicación:</strong> {{this.year}}</p>
                <p class="card-text"><strong>Categoría:</strong> {{this.GenreName}}</p>
                <p class="card-text"><strong>Editorial:</strong> {{this.PublisherName}}</p>
              <div class="d-flex">
              <a href="book/update/{{id}}" class="btn btn-primary me-2">Editar</a>
              <form id="form-delete-{{id}}" action="book/delete/{{id}}"  method="post" style="margin: 0;">
              <button type="button" class="btn btn-danger" onclick="confirmDelete({{id}})">Eliminar</button>
               </form>
    </div>
            </div>
     </div> 
     {{/each}}
     </div>
     {{else}}
     <div>
        <h2>No hay Libros</h2>
     </div>
     {{/if}}
       
</div>

<script>
function confirmDelete(id){
    Swal.fire({
  title: "Estas seguro?",
  text: "Los cambios no podran revertirse!",
  icon: "warning",
  showCancelButton: true,
  confirmButtonColor: "#3085d6",
  cancelButtonColor: "#d33",
  confirmButtonText: "Si, eliminalo!"
}).then((result) => {
  if (result.isConfirmed) {
    Swal.fire({
      title: "Eliminado!",
      text: "Tu Genero ha sido eliminado.",
      icon: "success"
    });
    const form = document.getElementById(`form-delete-${id}`)
    form.submit()
  }
});
}
</script>