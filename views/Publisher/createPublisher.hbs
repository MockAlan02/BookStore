<form class="form" action={{#if id}}"/publisher/update/{{id}}"{{else}}"/publisher/create"{{/if}} method="post" class="container mt-5" style="width: 60%;display: flex;flex-direction: column; gap: 10px;">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="{{publisher.name}}" required>
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input type="text" class="form-control" id="phone" name="phone" value="{{publisher.phone}}" required>
    </div>
    <div class="form-group">
        <label for="country">Country</label>
        <input type="text" class="form-control" id="country" name="country" value="{{publisher.country}}" required>
    </div>
    <a href="/publisher" class="btn btn-secondary">Volver</a>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>